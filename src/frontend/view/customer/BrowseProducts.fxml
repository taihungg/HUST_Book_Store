<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<VBox maxHeight="Infinity" maxWidth="800" minHeight="500" minWidth="800" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10">
         <children>
            <Label styleClass="section-header" text="Browse Products">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      
      <HBox spacing="10">
         <children>
            <TextField fx:id="searchField" promptText="Search products..." HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" text="Search" />
         </children>
      </HBox>
      
      <HBox spacing="15" VBox.vgrow="ALWAYS">
         <children>
            <VBox spacing="5">
               <children>
                  <Label styleClass="filter-header" text="Filter Options">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  
                  <TitledPane text="Filter by Category">
                     <content>
                        <VBox spacing="5">
                           <children>
                              <CheckBox text="Fiction" />
                              <CheckBox text="Non-Fiction" />
                              <CheckBox text="Science" />
                              <CheckBox text="History" />
                              <CheckBox text="Programming" />
                              <Button text="Apply Filter" />
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
                  
                  <TitledPane text="Filter by Price">
                     <content>
                        <VBox spacing="5">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="5">
                                 <children>
                                    <Label text="Min: " />
                                    <TextField fx:id="minPriceField" prefWidth="70" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" spacing="5">
                                 <children>
                                    <Label text="Max:" />
                                    <TextField fx:id="maxPriceField" prefWidth="70" />
                                 </children>
                              </HBox>
                              <Button text="Apply Filter" />
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
                  
                  <TitledPane text="Sort Options">
                     <content>
                        <VBox spacing="5">
                           <children>
                              <fx:define>
                                 <ToggleGroup fx:id="sortGroup" />
                              </fx:define>
                              <RadioButton text="Sort by Title" toggleGroup="$sortGroup" />
                              <RadioButton text="Sort by Cost" toggleGroup="$sortGroup" />
                              <RadioButton text="Sort by Rating" toggleGroup="$sortGroup" />
                              <Button text="Apply Sort" />
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
               </children>
            </VBox>
            
            <VBox spacing="10" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_RIGHT" spacing="10">
                     <children>
                        <Label text="Showing 24 items" />
                        <ComboBox fx:id="viewModeComboBox" promptText="View Mode">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Grid View" />
                                 <String fx:value="List View" />
                              </FXCollections>
                           </items>
                        </ComboBox>
                        <Button fx:id="notifyNotFoundButton" text="Notify Not Found" />
                     </children>
                  </HBox>
                  
                  <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" fx:id="productScrollPane">
                     <content>
                        <GridPane fx:id="productsGrid" hgap="10" vgap="10">
                           <columnConstraints>
                              <ColumnConstraints percentWidth="33.33" />
                              <ColumnConstraints percentWidth="33.33" />
                              <ColumnConstraints percentWidth="33.33" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                           </rowConstraints>
                           <children>
                              <VBox styleClass="product-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <ImageView fitWidth="120" fitHeight="160" preserveRatio="true">
                                       <image>
                                          <Image url="@/images/book1.jpg" />
                                       </image>
                                    </ImageView>
                                    <Label styleClass="product-title" text="Book Title 1" wrapText="true">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label styleClass="product-price" text="Price: $19.99" />
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                       <children>
                                          <Button text="Add to Cart" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              
                              <VBox styleClass="product-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <ImageView fitWidth="120" fitHeight="160" preserveRatio="true">
                                       <image>
                                          <Image url="@/images/book2.jpg" />
                                       </image>
                                    </ImageView>
                                    <Label styleClass="product-title" text="Book Title 2" wrapText="true">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label styleClass="product-price" text="Price: $24.99" />
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                       <children>
                                          <Button text="Add to Cart" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              
                              <VBox styleClass="product-card" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <ImageView fitWidth="120" fitHeight="160" preserveRatio="true">
                                       <image>
                                          <Image url="@/images/book3.jpg" />
                                       </image>
                                    </ImageView>
                                    <Label styleClass="product-title" text="Book Title 3" wrapText="true">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label styleClass="product-price" text="Price: $29.99" />
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                       <children>
                                          <Button text="Add to Cart" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </GridPane>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>