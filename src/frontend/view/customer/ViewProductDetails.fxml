<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="15">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   
   <HBox spacing="10" alignment="CENTER_LEFT">
      <Button fx:id="backButton" text="&lt; Back to Products" />
      <Label text="Product Details" styleClass="section-header">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </HBox>
   
   <HBox spacing="20">
      <VBox prefWidth="300" alignment="TOP_CENTER" spacing="15">
         <padding>
            <Insets top="10" />
         </padding>
         <Label text="[Book Cover]" style="-fx-border-color: #cccccc; -fx-border-width: 1;" prefHeight="300" prefWidth="200" alignment="CENTER" />
         <HBox spacing="10" alignment="CENTER">
            <Button fx:id="playDemoButton" text="Play Demo" />
            <Button fx:id="rateButton" text="Rate" />
         </HBox>
      </VBox>
      
      <VBox HBox.hgrow="ALWAYS" spacing="10">
         <Label fx:id="titleLabel" text="Book Title" styleClass="product-title">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         
         <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Author:" />
            <Label fx:id="authorLabel" text="Author Name" />
         </HBox>
         
         <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Category:" />
            <Label fx:id="categoryLabel" text="Fiction" />
         </HBox>
         
         <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Rating:" />
            <Label fx:id="ratingLabel" text="4.5/5.0" />
         </HBox>
         
         <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Price:" styleClass="product-price">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="priceLabel" text="19.99" styleClass="product-price">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </HBox>
         
         <Separator />
         
         <Label text="Description:" />
         <ScrollPane fitToWidth="true" prefHeight="150" VBox.vgrow="ALWAYS">
            <TextArea fx:id="descriptionArea" editable="false" wrapText="true" prefRowCount="5">
               <text>This is a detailed description of the book. It contains information about the plot, themes, and other relevant details about the book. This text would typically be much longer and provide a comprehensive overview of what the reader can expect.</text>
            </TextArea>
         </ScrollPane>
         
         <Separator />
         
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Quantity:" />
            <Spinner fx:id="quantitySpinner" prefWidth="70" min="1" max="99" initialValue="1" />
            <Button fx:id="addToCartButton" text="Add to Cart" defaultButton="true" />
            <Button fx:id="notifyButton" text="Notify When Available" visible="false" />
         </HBox>
      </VBox>
   </HBox>
   
   <TitledPane text="Customer Reviews" expanded="false">
      <VBox spacing="10">
         <Label text="Average Rating: 4.5/5.0 (42 reviews)" />
         <ListView fx:id="reviewsList" prefHeight="200" />
      </VBox>
   </TitledPane>
   
   <TitledPane text="Similar Products" expanded="false">
      <GridPane hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints percentWidth="33.33" />
            <ColumnConstraints percentWidth="33.33" />
            <ColumnConstraints percentWidth="33.33" />
         </columnConstraints>
         
         <VBox styleClass="similar-product" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Similar Book 1" styleClass="product-title" />
            <Label text="14.99" styleClass="product-price" />
            <Button text="View" />
         </VBox>
         
         <VBox styleClass="similar-product" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Similar Book 2" styleClass="product-title" />
            <Label text="21.99" styleClass="product-price" />
            <Button text="View" />
         </VBox>
         
         <VBox styleClass="similar-product" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <Label text="Similar Book 3" styleClass="product-title" />
            <Label text="16.99" styleClass="product-price" />
            <Button text="View" />
         </VBox>
      </GridPane>
   </TitledPane>
</VBox>