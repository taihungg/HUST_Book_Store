<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.admin.ToyController">
    <content>
        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <RowConstraints maxHeight="76.0" minHeight="10.0" prefHeight="26.0" vgrow="SOMETIMES" /> <RowConstraints maxHeight="94.0" minHeight="10.0" prefHeight="94.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints /> </rowConstraints>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Add New Toy" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label text="Title:" GridPane.rowIndex="1" />
                <TextField fx:id="titleField" promptText="Enter toy title" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Description:" GridPane.rowIndex="2" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="5.0" />
                    </GridPane.margin>
                </Label>
                <TextArea fx:id="descriptionArea" prefHeight="70.0" promptText="Enter toy description" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Gallery URL:" GridPane.rowIndex="3" />
                <TextField fx:id="galleryUrlField" promptText="Enter image URL (e.g., http://...)" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Price:" GridPane.rowIndex="4" />
                <TextField fx:id="priceField" promptText="Enter price (e.g., 25.99)" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Status:" GridPane.rowIndex="5" />
                <ComboBox fx:id="statusComboBox" prefWidth="150.0" promptText="-- Select Status --" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Label text="Material:" GridPane.rowIndex="6" />
                <TextField fx:id="materialField" promptText="Enter material (e.g., Plastic, Wood)" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Age Recommendation:" GridPane.rowIndex="7" />
                <TextField fx:id="ageRecommendationField" promptText="e.g., 3+, 5-8 years" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <Label text="Brand:" GridPane.rowIndex="8" />
                <TextField fx:id="brandField" promptText="Enter brand name" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                <Label text="Type:" GridPane.rowIndex="9" />
                <TextField fx:id="typeField" promptText="Enter toy type (e.g., Action Figure, Puzzle)" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="10">
                    <children>
                        <Button fx:id="addToyButton" mnemonicParsing="false" onAction="#handleAddToy" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add Toy" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
                    </children>
                </HBox>
            </children>
        </GridPane>
    </content>
</ScrollPane>
