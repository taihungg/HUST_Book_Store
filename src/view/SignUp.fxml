<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignUpController">
   <children>
      <VBox alignment="CENTER" maxWidth="600.0" minWidth="500.0" style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #ffffff); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3);" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
         </padding>
         <spacing>25</spacing>
         <children>
            <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Create Account" />
            
            <VBox spacing="20">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Label minWidth="140" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Full Name" />
                        <TextField fx:id="fullName" prefHeight="40.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Label minWidth="140" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Phone Number" />
                        <TextField fx:id="phone" prefHeight="40.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Label minWidth="140" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Username" />
                        <TextField fx:id="username" prefHeight="40.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Label minWidth="140" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Password" />
                        <TextField fx:id="password" prefHeight="40.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Label minWidth="140" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Confirm Password" />
                        <TextField fx:id="cfpw" prefHeight="40.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Label minWidth="140" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Address" />
                        <TextField fx:id="address" prefHeight="40.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Label minWidth="140" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Email" />
                        <TextField fx:id="email" prefHeight="40.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <Button fx:id="btnSignUp" minHeight="45" minWidth="200" onAction="#btnSignUpclicked" style="-fx-background-color: Blue; -fx-cursor: hand; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-radius: 25;" text="Create Account" />
         </children>
      </VBox>
   </children>
</HBox>
