<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SignUpController">
   <children>
      <VBox alignment="CENTER" maxWidth="2000.0" style="-fx-background-color: #E0E0E0;" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="20" left="40" right="40" top="20" />
         </padding>
         <spacing>20</spacing>
         <children>
            <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Sign Up" />
            
            <VBox spacing="15">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label minWidth="150" style="-fx-font-size: 18px;" text="Full Name" />
                        <TextField HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label minWidth="150" style="-fx-font-size: 18px;" text="Phone Number" />
                        <TextField HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label minWidth="150" style="-fx-font-size: 18px;" text="Username" />
                        <TextField HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label minWidth="150" style="-fx-font-size: 18px;" text="Password" />
                        <TextField HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label minWidth="150" style="-fx-font-size: 18px;" text="Confirm Password" />
                        <TextField HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="180.0" spacing="10">
                     <children>
                        <Label minWidth="150" style="-fx-font-size: 18px;" text="Address" />
                        <TextField HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="222.0" spacing="10">
                     <children>
                        <Label minWidth="150" style="-fx-font-size: 18px;" text="Email" />
                        <TextField HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <Button fx:id="btnSignUp" minHeight="34" minWidth="100" onAction="#btnSignUpclicked" style="-fx-background-color: ADD8E6; -fx-cursor: hand; -fx-font-size: 18px;" text="Sign Up" />
         </children>
      </VBox>
   </children>
</HBox>
