<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F8F9FA;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.admin.ProductTypeSelectionController">
   <content>
      <VBox alignment="TOP_CENTER" prefWidth="800" spacing="25.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12;">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" style="-fx-padding: 0 0 25 0;">
               <children>
                  <Label text="Thêm Sản Phẩm Mới" textFill="#34495E">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" height="5.0" radius="2.0" width="5.0">
                           <color>
                              <Color opacity="0.15" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color opacity="0.08" />
                     </color>
                  </DropShadow>
               </effect>
            </HBox>
            <Label text="Vui lòng chọn loại sản phẩm bạn muốn thêm:" textFill="#37474F">
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="addToyButton" mnemonicParsing="false" onAction="#handleAddToy" prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #FFD700; -fx-text-fill: #333333; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-border-color: #FFC107; -fx-border-width: 1.5px; -fx-border-radius: 11; -fx-cursor: hand;" text="Add Toy">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color opacity="0.2" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
            <Button fx:id="addStationeryButton" mnemonicParsing="false" onAction="#handleAddStationery" prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #20B2AA; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-border-color: #1A9F96; -fx-border-width: 1.5px; -fx-border-radius: 11; -fx-cursor: hand;" text="Add Stationery">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color opacity="0.2" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
            <Button fx:id="addBookButton" mnemonicParsing="false" onAction="#handleAddBook" prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #66BB6A; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-border-color: #4CAF50; -fx-border-width: 1.5px; -fx-border-radius: 11; -fx-cursor: hand;" text="Add Book">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color opacity="0.2" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #6C757D; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 10 25;" text="BACK">
                     <effect>
                        <DropShadow blurType="GAUSSIAN" height="5.0" radius="2.0" width="5.0">
                           <color>
                              <Color opacity="0.2" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
