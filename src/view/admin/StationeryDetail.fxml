<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ProductDetailController">
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #D3D3D3; -fx-border-color: #BDBDBD; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="productNameHeaderLabel" text="[Tên Sản Phẩm]">
                    <font>
                        <Font name="Arial Bold" size="26.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <HBox spacing="25.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <VBox alignment="TOP_CENTER" minWidth="-Infinity" prefWidth="320.0" spacing="10.0" HBox.hgrow="NEVER">
                    <children>
                        <Label text="Hình Ảnh Sản Phẩm">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <ImageView fx:id="productImageView" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: #CCCCCC; -fx-border-width: 1; -fx-background-color: #f9f9f9;">
                            </ImageView>
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="prevImageButton" mnemonicParsing="false" onAction="#handlePrevImageAction" prefWidth="80.0" text="&lt; Trước" />
                                <Label fx:id="imageCounterLabel" text="- / -">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                                <Button fx:id="nextImageButton" mnemonicParsing="false" onAction="#handleNextImageAction" prefWidth="80.0" text="Sau &gt;" />
                            </children>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <Label style="-fx-font-style: italic; -fx-text-fill: gray;" text="(Ảnh minh họa)" />
                    </children>
                </VBox>

                <VBox prefHeight="700.0" prefWidth="800.0" spacing="8.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Giá bán:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="productPriceLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="[Chưa có thông tin]">
                            <padding>
                                <Insets bottom="5.0" left="10.0" />
                            </padding>
                        </Label>

                        <Label style="-fx-font-weight: bold;" text="Trạng thái:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="productStatusLabel" style="-fx-font-size: 14px;" text="[Chưa có thông tin]">
                            <padding>
                                <Insets bottom="5.0" left="10.0" />
                            </padding>
                        </Label>
                        
                        <Label style="-fx-font-weight: bold;" text="Số lượng còn lại:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="productQuantityLabel" style="-fx-font-size: 14px;" text="[Chưa có thông tin]">
                            <padding>
                                <Insets bottom="5.0" left="10.0" />
                            </padding>
                        </Label>

                        <Label style="-fx-font-weight: bold;" text="Loại (Thể loại):">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="productTypeLabel" style="-fx-font-size: 14px;" text="[Chưa có thông tin]">
                            <padding>
                                <Insets bottom="5.0" left="10.0" />
                            </padding>
                        </Label>

                        <Label style="-fx-font-weight: bold;" text="Màu sắc:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="productColorLabel" style="-fx-font-size: 14px;" text="[Chưa có thông tin]">
                            <padding>
                                <Insets bottom="5.0" left="10.0" />
                            </padding>
                        </Label>

                        <Label style="-fx-font-weight: bold;" text="Nhà sản xuất:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="productManufacturerLabel" style="-fx-font-size: 14px;" text="[Chưa có thông tin]">
                            <padding>
                                <Insets bottom="5.0" left="10.0" />
                            </padding>
                        </Label>

                        <Label style="-fx-font-weight: bold;" text="Chất liệu:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="productMaterialLabel" style="-fx-font-size: 14px;" text="[Chưa có thông tin]">
                            <padding>
                                <Insets bottom="5.0" left="10.0" />
                            </padding>
                        </Label>
                        
                        <Label style="-fx-font-weight: bold;" text="Mô tả chi tiết:">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="productDescriptionArea" editable="false" prefRowCount="6" promptText="[Chưa có thông tin mô tả sản phẩm...]" style="-fx-font-size: 13px;" wrapText="true" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets left="5.0" />
                            </VBox.margin>
                        </TextArea>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="800.0" style="-fx-background-color: #D3D3D3; -fx-border-color: #BDBDBD; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets bottom="10.0" left="15.0" right="25.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="backButton" minHeight="30.0" minWidth="70.0" onAction="#handleBackButtonAction" style="-fx-font-size: 13px;" text="Quay Lại" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
